<resources>

    <style name="Widget.Theme.LearnAt.ActionBar.Fullscreen"
        parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>

    </style>

    <style name="Widget.Theme.LearnAt.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="dashboardCardTitleItem">
        <item name="android:textSize">@dimen/dashboardCard_title</item>
        <item name="android:textColor">@color/text_desc</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="fontFamily">@font/encode_sans_bold500</item>
    </style>
    <style name="DashBoardGroupTitle">
        <item name="android:textColor">@color/dashbaordTitle</item>
        <item name="android:textSize">@dimen/dashbordTitle_size</item>
        <item name="android:layout_marginTop">@dimen/dashboard_title_top_padding</item>
    </style>

    <style name="ProfileSubHeading">
    <item name="android:textColor">@color/theme_text_color</item>
        <item name="android:textSize">@dimen/size_profile_1</item>
    </style>
    <style name="AdminButtons">

    </style>
    <style name="ProfileTitles">
        <item name="fontFamily">@font/encode_sans400</item>
        <item name="drawableTint">#305571</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">8dp</item>
        <item name="paddingEnd">8dp</item>
        <item name="android:textColor">@color/soft_black</item>
        <item name="android:textSize">@dimen/size_profile_2</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingTop">14dp</item>
    </style>
    <style name="ProfileIcon">

        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="tint">@color/theme_text_color</item>
    </style>
    <style name="dashBoardCardPadding">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
    <style name="ViewTitles" >
        <item name="android:textColor">@color/view_titles</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/encode_sans_bold500</item>
    </style>
    <style name="ViewDescriptions" >
        <item name="android:textColor">@color/text_desc</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/encode_sans_bold500</item>
    </style>
    <style name="ViewToolbar" parent="@style/Widget.AppCompat.ActionBar" >
        <item name="android:textColor">@color/text_desc</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/encode_sans_bold500</item>
    </style>

    <style name="PriceText" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/encode_sans_bold500</item>
    </style>
    <style name="MentorMain">
        <item name="fontFamily">@font/encode_sans400</item>
        <item name="android:textColor">@color/text_desc</item>
        <item name="android:textSize">@dimen/medium_0</item>
    </style>
</resources>